<%= form_for(@producto) do |f| %>
	<% @producto.errors.full_messages.each do |message| %>
		<div class="be-red white top-space">
			* <%= message %>
		</div>
	<%end%>
	<div class="field">
		<%= f.text_field :nombre, placeholder: "Ingrese el nombre del producto", class:"form-control"%>
	</div class="field">
	<div>
		<%= f.text_area :codigo, placeholder: "Escribir el codigo del producto", style: "height: 250px;", class:"form-control"%>
	</div>
	<div class="field">
		<%= f.submit "Guardar", class:"btn be-red white"%>
		</div>
<%end%>	